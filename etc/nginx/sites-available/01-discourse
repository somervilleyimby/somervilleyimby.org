server {
  listen 80;
  listen [::]:80;
  server_name discourse.somervilleyimby.org;
  server_tokens off;

  access_log /var/log/nginx/discourse.somervilleyimby.org.access.log;
  error_log /var/log/nginx/discourse.somervilleyimby.org.error.log;

  location /.well-known/acme-challenge/ {
    root /var/www;
  }

  location /metrics {
    proxy_pass http://unix:/var/discourse/shared/standalone/nginx.http.sock:;
    proxy_set_header Host $http_host;
    proxy_http_version 1.1;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header X-Real-IP $remote_addr;
  }

  location / {
    return 301 https://$host$request_uri;
  }
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name discourse.somervilleyimby.org;
  server_tokens off;

  access_log /var/log/nginx/discourse.somervilleyimby.org.access.log;
  error_log /var/log/nginx/discourse.somervilleyimby.org.error.log;

  ssl_certificate               /etc/letsencrypt/live/somervilleyimby.org/fullchain.pem; # managed by Certbot
  ssl_certificate_key           /etc/letsencrypt/live/somervilleyimby.org/privkey.pem; # managed by Certbot
  include                       /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam                   /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

  # add_header Strict-Transport-Security "max-age=63072000;";
  # ssl_stapling on;
  # ssl_stapling_verify on;

  client_max_body_size 0;

  location / {
    proxy_pass http://unix:/var/discourse/shared/standalone/nginx.http.sock:;
    proxy_set_header Host $http_host;
    proxy_http_version 1.1;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header X-Real-IP $remote_addr;

    # README: Serve a static error page when Discourse is unavailable
    # https://meta.discourse.org/t/add-an-offline-page-to-display-when-discourse-is-rebuilding-or-starting-up/45238
    error_page              502 =502 /errorpages/discourse_offline.html;
    proxy_intercept_errors  on;
  }

  location /errorpages/ {
    alias /var/www/errorpages/;
  }
}
